<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn">

    <!-- this buttons lead to the fragments with p and l at the end -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/learnsectionbutton"
            android:layout_width="196dp"
            android:layout_height="472dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="111dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/finallearnmenu"
            android:contentDescription="@string/desciption"
            app:layout_constraintEnd_toStartOf="@+id/preparesectionbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/preparesectionbutton"
            android:layout_width="196dp"
            android:layout_height="472dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="76dp"
            android:layout_marginBottom="111dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/learnsectionbutton"
            android:src="@drawable/finalpreparemenu"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/desciption"
            tools:ignore="VisualLintBounds"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>